{
    "name": "ecomerce-backend",
    "version": "1.0.0",
    "description": "Backend para sistema de e-commerce con Node.js, Express y Squelize",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "init-db": "node config/createdatabase.js",
        "reset-db": "node config/resetdatabase.js",
        "seed-db": "node -e \"require('./seeders/adminSeeder').runSeeder().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
        "test": "jest --detectOpenHandles --forceExit",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "lockfileVersion": 3,
    "requires": true,
    "packages": {}
    }